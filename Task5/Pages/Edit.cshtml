@page
@model Task5.Pages.EditModel
@{
}
<!DOCTYPE html>
<html>
<head>
    <title>Student Board</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="css/site.css" />
</head>
<body class="bg-dark text-light">
    <h2 class="text-center">Student: @Model.Student.Name @Model.Student.Surname</h2>
    <hr class="border-light"/>
    <form class="text-light d-flex flex-row flex-wrap justify-content-center" method="post">
        Name: <input class="ml-2 mr-4  bg-transparent border-top-0 border-left-0 border-right-0 border-light text-light" style="outline: none;" type="text" required="required" value="@Model.Student.Name" asp-for="Student.Name"/>
        Surname: <input class="ml-2 mr-4  bg-transparent border-top-0 border-left-0 border-right-0 border-light text-light" style="outline: none;" type="text" required="required" value="@Model.Student.Surname" asp-for="Student.Surname"/>
        Age: <input class="ml-2 mr-4  bg-transparent border-top-0 border-left-0 border-right-0 border-light text-light" style="outline: none;" type="number" min="18" max="100" value="18" required="required" value="@Model.Student.Age" asp-for="Student.Age"/>
        Score: <input class="ml-2 mr-4  bg-transparent border-top-0 border-left-0 border-right-0 border-light text-light" style="outline: none;" type="number" min="0" max="100" value="0" required="required" value="@Model.Student.Score" asp-for="Student.Score"/>
        <input class="pl-3 pr-3 text-dark border-0 rounded-pill btn-outline-success" type="submit" value="Submit"/>
    </form>
</body>